<form action="<%= submitPath %>?_csrf=<%= locals.csrfToken %>" method="POST" enctype="multipart/form-data">
    <p>
        <label for="title">Title</label>
         <input type="text" id="title" name="title" value="<%= beat.title %>" required>
    </p>
    <div id="image-upload-control">
        <p>
            <label for="image">Image</label>
            <input type="file" id="image" name="image" accept="image/png, image/jpg" <% if (imageRequired) { %>required<% }  %> >
        </p>
        <img src="" alt="Selected image.">
    </div>
    <!-- <p>
        <label for="beat">Beat</label>
        <input type="file" id="beat" name="beat" accept="audio/wav, audio/mp3">
    </p> -->
    <p>
        <label for="summary">Summary</label>
        <input type="text" id="summary" name="summary" value="<%= beat.summary %>"  maxlength="250" required>
    </p>
    <p>
        <label for="price">Price</label>
        <input type="number" id="price" name="price" value="<%= beat.price %>"  min="0.01" step="0.01" required>
    </p>
    <p>
        <label for="description">Description</label>
        <textarea id="description" name="description" rows="7" required><%= beat.description %></textarea>
    </p>
    <p>
        <button type="reset" class="btn btn-alt"> Reset</button>
        <button class="btn">Save</button>
    </p>
</form>